<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.develop.zuzik.audioplayerexample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.activities.ExampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.PlayerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.MultipleVideoActivity"/>
        <activity android:name=".presentation.activities.VideoActivity"/>

        <service
            android:name="com.develop.zuzik.player.service.PlaybackService"
            android:exported="false"/>
        <service
            android:name="com.develop.zuzik.multipleplayer.service.MultiplePlaybackService"
            android:exported="false"/>

        <receiver android:name=".presentation.appwidget_provider.PlayerAppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_provider_player"/>
        </receiver>

        <receiver android:name=".presentation.appwidget_provider.PlayBroadcastReceiver"/>
        <receiver android:name=".presentation.appwidget_provider.PauseBroadcastReceiver"/>
        <receiver android:name=".presentation.appwidget_provider.StopBroadcastReceiver"/>

    </application>

</manifest>